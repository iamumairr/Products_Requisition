@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row d-flex align-items-center justify-content-center">
    <div class="col-md-4">
        <section class="border shadow p-3">
            <h1 class="text-center text-info">@ViewData["Title"]</h1>
            <hr />
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mt-2">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="mt-2">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="mt-2">
                    <button id="login-submit" type="submit" class="w-100 btn btn-primary">Log in</button>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="mt-2 w-100 btn btn-success text-white">Register</a>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
